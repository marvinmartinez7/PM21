<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM21.Views.Pagethree">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="El Resultado de la Resta:" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label Text="{Binding Resta}"
               
                VerticalOptions="CenterAndExpand" 
               
                HorizontalOptions="CenterAndExpand"  x:Name="lbresultado1" TextColor="White" FontSize="96" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>